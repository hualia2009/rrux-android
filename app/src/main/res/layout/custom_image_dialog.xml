<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:background="@drawable/xml_white_corners_bg" android:layout_width="match_parent" android:layout_height="match_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_top_image_corners_bg">
        
     <TextView 
	      android:id="@+id/title"
	      android:layout_width="match_parent"
	      android:layout_height="48.0dp"
	      android:text="拍照示意"
	      android:textColor="@color/white"
	      android:textSize="@dimen/font_button"
	      android:gravity="center"/>
     
     </LinearLayout>
     
     <TextView 
          android:id="@+id/notice_tip"
	      android:padding="10.0dip"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:textColor="@color/inner_text_color"
	      android:textSize="@dimen/font_tip"
	      android:gravity="center"/>
     
     <ImageView
         android:layout_gravity="center"
	      android:layout_marginBottom="20dp"
	      android:layout_marginLeft="10dp"
	      android:layout_marginRight="10dp"
	      android:id="@+id/image_notice"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:scaleType="centerCrop"
	      />
    
    <View android:background="#cccccc" android:layout_width="fill_parent" android:layout_height="1.0px" />
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@drawable/xml_bottom_image_corners_bg" >
        <Button android:id="@+id/confirm" android:layout_width="0.0dip" android:layout_height="48.0dp" android:text="去拍照" android:layout_weight="1.0" style="@style/ShowImageButton"/>
    </LinearLayout>
</LinearLayout>

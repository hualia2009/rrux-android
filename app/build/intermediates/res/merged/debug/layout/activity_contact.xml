<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
	
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_blue_color"
        android:orientation="horizontal"
        android:padding="10dp" >
		    <com.ucredit.dream.contact.SearchEditText
		        android:id="@+id/txt_filter_edit"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="12dp"
			    android:layout_marginRight="12dp"
			    android:background="@drawable/clearedittext_bg"
		        android:drawableLeft="@drawable/searchicon"
		        android:paddingLeft="10dp"
		        android:paddingRight="25dp"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
			    android:textAlignment="center"
		        android:hint="搜索"
		        android:singleLine="true"
		        android:gravity="center"
		        android:textSize="16.0dip" />
    </LinearLayout>
    <!-- contact user list -->
	<FrameLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
	    <ListView
	        android:id="@+id/list_view_user_list"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:scrollbars="none"
	        android:layout_marginBottom="20dp"
	        >
	    </ListView>
	 	
	    <TextView 
	        android:id="@+id/txt_dialog"
	        android:layout_width="80.0dip"
	        android:layout_height="80.0dip"
	        android:layout_gravity="center"
	        android:background="@drawable/bg_photo_default_mask3_1"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:textSize="30.0dip"
	        android:visibility="invisible"/>
	    
	    <com.ucredit.dream.contact.SideBar
	        android:id="@+id/sild_bar"
	        android:layout_width="20.0dip"
	        android:layout_height="fill_parent"
	        android:layout_marginBottom="20dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center|right"/>
	    <TextView 
	        android:id="@+id/txt_user_list_user_num"
	        android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingBottom="2dp"
			android:text="加载联系人中..."
			android:background="@color/white"
			android:textColor="@color/black"
			android:textSize="12sp"
			android:layout_gravity="bottom"
			android:gravity="center"
			 />
	 </FrameLayout>    
	
</LinearLayout>
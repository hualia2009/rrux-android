<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="customStyle" parent="@android:style/Widget" />
    <style name="customStyle.White_26" parent="@style/customStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/font_color</item>
    </style>
    
    <!-- 主菜单样式 -->
    <style name="mainMenuItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">20dp</item>
    </style>
    <style name="mainMenuStatusText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@drawable/back_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="mainMenuStatusViceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_tip</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    
    <!-- 额度申请上面公共部分样式 -->
    <style name="limitApplyHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/textview_selector</item>
        <item name="android:layout_marginTop">@dimen/apply_top_point_margin</item>
    </style>
    
    <!-- 设置item样式 -->
    <style name="settingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/setting_white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
	<style name="ShowWidgetButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@drawable/xml_dialog_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:background">@drawable/xml_dialog_click</item>
        <item name="android:paddingTop">13.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">13.0dip</item>
        <item name="android:focusable">false</item>
    </style>
	<style name="ShowImageButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/xml_dialog_image_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:background">@color/main_green_color</item>
        <item name="android:paddingTop">13.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">13.0dip</item>
        <item name="android:focusable">false</item>
    </style>
	<style name="mainBorrowLayoutBottomBg">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/before_rotate_bg</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
	<style name="mainContentLayoutBottomBg">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/before_rotate_bg</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingTop">16.0dip</item>
        <item name="android:paddingBottom">16.0dip</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
	<style name="input_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框 -->
        <item name="android:windowIsFloating">false</item><!--是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="custom_button" parent="android:Widget.Button">
        <item name="android:background">@drawable/face_btn</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@drawable/button_text_colour</item>

    </style>
    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>    
    <declare-styleable name="AutoRatioImageView">
        <!-- -ratio 高/宽 -->
        <attr name="ratio" format="float" />
        <attr name="prefer" format="integer" />
    </declare-styleable>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_message_content"
            android:textSize="@dimen/font_tip"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/font_color" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="10dp" >
        
        <RelativeLayout 
            android:id="@+id/apply_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/apply_btn_bg">
			    

			<TextView
			    android:id="@+id/apply_id_txt"
			    android:layout_margin="10dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="身份证扫描"
			    android:textColor="@color/white"
			    android:layout_centerInParent="true"
            	android:textSize="@dimen/font_title"
			    />
			
			<ImageView 
			    android:layout_centerVertical="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/apply_idcard"/>    
			
			<ImageView 
			    android:id="@+id/apply_id_done"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="10dp"
			    android:layout_centerVertical="true"
			    android:visibility="gone"
			    android:src="@drawable/apply_done"/>  
            
        </RelativeLayout>

		<RelativeLayout 
            android:id="@+id/apply_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/apply_btn_bg">
			    

			<TextView
			    android:id="@+id/apply_contact_txt"
			    android:layout_margin="10dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="联络资料"
			    android:textColor="@color/white"
			    android:layout_centerInParent="true"
            	android:textSize="@dimen/font_title"
			    />
			
			<ImageView 
			    android:layout_centerVertical="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/apply_contact"/>    
			
			<ImageView 
			    android:id="@+id/apply_contact_done"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="10dp"
			    android:layout_centerVertical="true"
			    android:visibility="gone"
			    android:src="@drawable/apply_done"/>  
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:id="@+id/apply_study_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/apply_btn_bg">
			    

			<TextView
			    android:id="@+id/apply_study_txt"
			    android:layout_margin="10dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="学籍信息"
			    android:textColor="@color/white"
			    android:layout_centerInParent="true"
            	android:textSize="@dimen/font_title"
			    />
			
			<ImageView 
			    android:layout_centerVertical="true"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_marginLeft="10dp"
			    android:src="@drawable/apply_study"/>    
			
			<ImageView 
			    android:id="@+id/apply_study_done"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_marginRight="10dp"
			    android:layout_centerVertical="true"
			    android:visibility="gone"
			    android:src="@drawable/apply_done"/>  
            
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_button_bg"
        android:enabled="false"
        android:text="提    交"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white" />

</LinearLayout>
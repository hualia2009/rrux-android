<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextureView
        android:id="@+id/activity_reg_capture_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/activity_reg_topImage"
            android:layout_width="match_parent"
            android:layout_height="125dip"
            android:scaleType="centerCrop"
            android:src="#aa000000" />

        <ImageView
            android:id="@+id/activity_reg_bottomImage"
            android:layout_width="match_parent"
            android:layout_height="145dip"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:src="#aa000000" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/activity_reg_bottomImage"
            android:layout_below="@+id/activity_reg_topImage"
            android:scaleType="centerCrop"
            android:src="#aa000000" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/activity_reg_bottomImage"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_reg_topImage"
            android:scaleType="centerCrop"
            android:src="#aa000000" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_reg_cameraRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/activity_reg_hyperphoricBtn"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/hyperphoricbtn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="15dip"
            android:gravity="center"
            android:text="请保持面部光照充足"
            android:textColor="#ffffffff"
            android:textSize="@dimen/font_title"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_reg_pictureRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/activity_reg_pictureImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dip"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/activity_reg_sureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/photo_layout_surebtn_selector" />

        <Button
            android:id="@+id/activity_reg_againBtn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            android:background="@drawable/photo_layout_againbtn_selector" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/activity_reg_progressbar"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
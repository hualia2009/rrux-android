<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2000000" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    <TextView 
        android:id="@+id/setting_phone"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="首页"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        /> 
        
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>
    
    <TextView 
        android:id="@+id/charge"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:gravity="center_vertical"
        android:text="充值还款"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_charge"
        android:drawablePadding="20dp"
        />    
    
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>

    <TextView 
        android:id="@+id/setting_account"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="账号修改"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_account"
        android:drawablePadding="20dp"
        />    
        
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>    
    
    <TextView 
        android:id="@+id/setting_feedback"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="意见反馈"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_feedback"
        android:drawablePadding="20dp"
        />    
    
    
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>     
         
    <TextView 
        android:id="@+id/setting_about"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="关于我们"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_about"
        android:drawablePadding="20dp"
        />    
    
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>      
    <TextView 
        android:id="@+id/setting_exit"
        android:paddingLeft="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="退出登录"
        android:textSize="@dimen/font_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/setting_exit"
        android:drawablePadding="20dp"
        />    
    
    <View 
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#424458"/>      
    </LinearLayout>    

    
    
</RelativeLayout>

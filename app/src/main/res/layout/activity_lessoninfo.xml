<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_button"
                android:text="培训机构："/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/inner_text_color"
                android:textSize="@dimen/font_button"
                android:id="@+id/institution"
                android:background="@null"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/divide_line_color"/>     
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_button"
                android:text="机构校区："/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/inner_text_color"
                android:textSize="@dimen/font_button"
                android:id="@+id/schoolzone"
                android:background="@null"/>
        </LinearLayout>     
        <View 
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="#EFEFF4"/>          
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_button"
                android:text="培训课程："/>
            <TextView 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="@dimen/font_button"
                android:id="@+id/lesson"
                android:hint="请选择课程"
                android:textColorHint="@color/main_blue_color"
                android:background="@null"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/rightarrow"/>
        </LinearLayout>
        <View 
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/divide_line_color"/>     
        <LinearLayout 
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_button"
                android:text="课程价格："/>
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/inner_text_color"
                android:textSize="@dimen/font_button"
                android:id="@+id/price"
                android:background="@null"/>
        </LinearLayout>     
        <View 
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:background="#EFEFF4"/> 
        <TextView 
            android:id="@+id/desc"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:textSize="@dimen/font_tip"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/inner_text_color"/>   
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@color/divide_line_color"/>   
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="@dimen/font_tip"
            android:textColor="@color/main_blue_color"
            android:text="下一步选择分期助学方案"/>  
   
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/next"
            android:text="下一步"
            android:enabled="false"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:textSize="@dimen/font_text"
            android:background="@drawable/bottom_button_bg"/>                
    </LinearLayout>

</ScrollView>

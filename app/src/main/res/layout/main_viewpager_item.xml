<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/main_viewpager_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_appendix" />

    <LinearLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icon"
        android:layout_alignTop="@id/icon"
        android:layout_alignBottom="@id/icon"
        android:layout_marginLeft="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java高级班"
            android:textSize="@dimen/font_button"
             />

        <TextView
            android:id="@+id/applyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="30000元"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_text"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/main_backgroud" />
    </LinearLayout>

    <TextView
        android:id="@+id/campusName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/icon"
        android:layout_below="@id/icon"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="达内上海"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_text" />

    <TextView
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/detail"
        android:layout_below="@id/detail"
        android:layout_toRightOf="@id/campusName"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="期限：6+6（月）"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_text" />

</RelativeLayout>